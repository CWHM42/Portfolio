<form action="/users/recover" method="POST">
    <div class="form-group">
      <label for="name">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        placeholder="Email"
        value="<%= typeof name != 'undefined' ? email : '' %>"
      />
    </div>
   
    <button type="submit" class="btn btn-primary btn-block">
      Send Recovery Email
    </button>
  </form>